{
  "name": "picast",
  "description": "Full-screen slideshow of images from a chosen folder in cinema mode.",
  "version": "1.0.3",
  "manifest_version": 3,
  "action": {
    "default_title": "Open picast",
    "default_icon": "icons/icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"]
}

